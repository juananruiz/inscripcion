{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Agregar persona' %}

{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('gestor_persona_listar') }}" class="btn btn-sm btn-danger"><span
                            data-feather="arrow-left-circle"></span> Cancelar y volver</a>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>

    <div class="col-md-8 order-md-1">
        <form class="form" action="{{ path('gestor_persona_grabar') }}" method="post">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input class="form-control" name="nombre" type="text" maxlength="150">
            </div>

            <div class="form-group">
                <label for="apellidos">Apellidos</label>
                <input class="form-control" name="apellidos" type="text" maxlength="150">
            </div>

            <div class="form-group">
                <label for="correo">Correo</label>
                <input class="form-control" name="correo" type="text" maxlength="150">
            </div>

            <div class="form-group">
                <label for="telefono">Teléfono</label>
                <input class="form-control" name="telefono" type="text" maxlength="15">
            </div>

            <div class="form-group">
                <label for="codigo_postal">Código Postal</label>
                <input class="form-control" name="codigo_postal" type="text" maxlength="15">
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">Grabar persona</button>
        </form>
    </div>
{% endblock %}


