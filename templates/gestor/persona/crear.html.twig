{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Crear Nuevo Usuario' %}

{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('gestor_persona_listar') }}" class="btn btn-sm btn-danger"><span
                            data-feather="arrow-left-circle"></span> Cancelar</a>
            </div>
        </div>
    </div>

    <div class="col-md-8 order-md-1">
        <form class="form" action="{{ path('gestor_persona_grabar') }}" method="post">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input class="form-control" name="nombre" type="text" maxlength="150" required>
            </div>
            <div class="form-group">
                <label for="apellidos">Apellidos</label>
                <input class="form-control" name="apellidos" type="text" maxlength="150" required>
            </div>
            <div class="form-group">
                <label for="correo">Correo</label>
                <input class="form-control" name="correo" type="email" maxlength="150" required>
            </div>
            <div class="form-group">
                <label for="telefono">Teléfono</label>
                <input class="form-control" name="telefono" type="text" maxlength="15">
            </div>
            <div class="form-group">
                <label for="via">Vía</label>
                <input class="form-control" name="via" type="text" maxlength="255">
            </div>
            <div class="form-group">
                <label for="numero">Número</label>
                <input class="form-control" name="numero" type="text" maxlength="255">
            </div>
            <div class="form-group">
                <label for="localidad">Localidad</label>
                <input class="form-control" name="localidad" type="text" maxlength="255">
            </div>
            <div class="form-group">
                <label for="provincia_id">Provincia</label>
                <select class="form-control" name="provincia_id">
                    <option value=""></option>
                    {% for provincia in provincias %}
                        <option value="{{ provincia.id }}">{{ provincia.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="codigo_postal">Código Postal</label>
                <input class="form-control" name="codigo_postal" type="text" maxlength="15">
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Grabar Usuario</button>
        </form>
    </div>
{% endblock %}
