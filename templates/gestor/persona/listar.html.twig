{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Lista de Personas' %}
{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('gestor_persona_crear') }}" class="btn btn-sm btn-primary"><span
                                data-feather="plus-circle"></span> Añadir Persona</a>
                <button class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nombre y apellidos</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Provincia</th>
            </tr>
            </thead>
            <tbody>
            {% for persona in personas %}
                <tr>
                    <td><a class="badge badge-primary" href="{{ path('gestor_persona_editar', {'id': persona.id}) }}" >{{ persona.id }}</a></td>
                    <td>{{ persona.nombre }} {{ persona.apellidos }}</td>
                    <td>{{ persona.telefono }}</td>
                    <td>{{ persona.correo }}</td>
                    {#<td>{% if persona.domicilio %}{{ persona.domicilio.provincia.nombre }}{% endif %}</td>#}
                    <td><a href="{{ path('gestor_persona_borrar', {'id': persona.id}) }}"><span data-feather="trash"></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
