{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = curso.nombre %}


{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button class="btn btn-sm btn-outline-secondary"><a href="{{ path('gestor_curso_editar') }}"><span
                                data-feather="plus-circle"></span> Editar datos del curso</a></button>
                <button class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label for="nombre">ID</label>
            <input class="form-control" name="id" value="{{ curso.id }}">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input class="form-control" name="nombre" value="{{ curso.nombre }}" disabled>
        </div>

        <div class="form-group">
            <label for="sala">Lugar</label>
            <input class="form-control" name="sala" value="{{ curso.sala.nombre }}" disabled>
        </div>

        <div class="form-group">
            <label for="horas">Duración (horas)</label>
            <input class="form-control" name="horas" value="{{ curso.horas }}" disabled>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Fecha inicio</th>
                <th>Duración</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for sesion in sesiones %}
                <tr>
                    <td><a class="badge badge-primary"
                           href="{{ path('gestor_sesion_editar', {'id': sesion.id}) }}">{{ sesion.id }}</a></td>
                    <td>{{ sesion.fecha_inicio }}</td>
                    <td>{{ sesion.duracion }}</td>
                    <td><a href="{{ path('gestor_sesion_borrar', {'id': curso.id}) }}"><span data-feather="trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
