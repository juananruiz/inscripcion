{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Listado de Cursos' %}


{% block contenido %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ titulo }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('gestor_curso_crear') }}" class="btn btn-sm btn-outline-secondary"><span
                    data-feather="plus-circle"></span> Crear Curso</a>
    </div>
</div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Plazas</th>
                <th>Inscritos</th>
                <th>Duraci√≥n</th>
                <th>Lugar</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for curso in cursos %}
                <tr>
                    <td><a class="badge badge-primary"
                           href="{{ path('gestor_curso_mostrar', {'id': curso.id}) }}">{{ curso.id }}</a></td>
                    <td>{{ curso.nombre }}</td>
                    <td>{{ curso.plazas }}</td>
                    <td>{{ curso.inscripciones|length }}</td>
                    <td>{{ curso.horas }}h</td>
                    <td>{{ curso.sala.provincia.nombre }}</td>
                    <td><a href="{{ path('gestor_curso_editar', {'id': curso.id}) }}"><span data-feather="edit"></span></a>
                    </td>
                    <td><a href="{{ path('gestor_curso_copiar', {'id': curso.id}) }}"><span data-feather="copy"></span></a>
                    </td>
                    <td><a href="{{ path('gestor_curso_borrar', {'id': curso.id}) }}"><span data-feather="trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
