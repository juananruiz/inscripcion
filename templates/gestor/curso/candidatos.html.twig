{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Candidatos Inscripción' %}
{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('gestor_persona_crear') }}" class="btn btn-sm btn-primary"><span
                                data-feather="plus-circle"></span> Crear usuario</a>
                <a href="{{ path('gestor_curso_mostrar', {'id': curso.id}) }}" class="btn btn-sm btn-danger"><span
                        data-feather="arrow-left-circle"></span> Volver al Curso</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nombre y apellidos</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for persona in candidatos %}
                <tr>
                    <td><a class="badge badge-primary" href="{{ path('gestor_persona_editar', {'id': persona.id}) }}" >{{ persona.id }}</a></td>
                    <td>{{ persona.nombre }} {{ persona.apellidos }}</td>
                    <td>{{ persona.telefono }}</td>
                    <td>{{ persona.correo }}</td>
                    {#<td>{% if persona.domicilio %}{{ persona.domicilio.provincia.nombre }}{% endif %}</td>#}
                    <td><a href="{{ path('gestor_inscripcion_grabar', {'persona_id': persona.id, 'curso_id': curso.id,
                            'estado_id': 1}) }}"><span data-feather="check-square" title="Inscribir"></span></a></td>
                    <td><a href="{{ path('gestor_inscripcion_grabar', {'persona_id': persona.id, 'curso_id': curso.id,
                            'estado_id': 2}) }}"><span data-feather="clock" title="Lista de espera"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
