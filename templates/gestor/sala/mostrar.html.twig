{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = sala.nombre %}

{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="{{ path('gestor_sala_listar') }}" class="btn btn-sm btn-primary"><span
                            data-feather="arrow-left-circle"></span> Lista de Aulas</a>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>

    <div class="col-md-8 order-md-1">
        <form class="form">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input class="form-control" name="nombre" type="text" value="{{ sala.nombre }}" readonly>
            </div>
            <div class="form-group">
                <label for="aforo">Aforo</label>
                <input class="form-control" name="aforo" type="number" value="{{ sala.aforo }}" readonly>
            </div>
            <div class="form-group">
                <label for="direccion">Direcci√≥n</label>
                <input class="form-control" name="direccion" type="text" value="{{ sala.direccion }}" readonly>
            </div>
            <div class="form-group">
                <label for="provincia_id">Provincia</label>
                <input class="form-control" name="provincia" type="text" value="{{ sala.provincia.nombre }}" readonly>
            </div>
            <div class="form-group">
                <label for="localidad">Localidad</label>
                <input class="form-control" name="localidad" type="text" value="{{ sala.localidad }}" readonly>
            </div>
            <div class="form-group">
                <label for="mapa_url">URL Mapa</label>
                <input class="form-control" name="mapa_url" type="url" value="{{ sala.mapaUrl }}" readonly>
            </div>
        </form>
    </div>
{% endblock %}


