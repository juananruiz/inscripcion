{% extends 'gestor/layout_dashboard.html.twig' %}
{% set titulo = 'Editando Edición' %}

{% block contenido %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ titulo }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button class="btn btn-sm btn-outline-secondary"><a
                            href="{{ path('gestor_curso_mostrar', {'id': sesion.curso.id}) }}"><span
                                data-feather="plus-circle"></span> Cancelar y volver al curso</a></button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>

    <div class="col-md-12">
        <form class="form" action="{{ path('gestor_sesion_grabar') }}" method="post">
            <input type="hidden" name="id" value="{{ sesion.id }}">
            <div class="form-row">
                <div class="form-group offset-1 col-md-5">
                    <label for="fecha_inicio">Fecha y hora inicio</label>
                    <input class="form-control" name="fecha_inicio" type="datetime-local"
                           value="{{ sesion.fechaInicio|date('Y-m-d\\TH:i:s') }}">
                </div>
                <div class="form-group offset-1 col-md-2">
                    <label for="duracion">Duración</label>
                    <input class="form-control" name="duracion" type="time" value="{{ sesion.duracion|date('H:i') }}">
                </div>
                <div class="form-group offset-1 col-md-2">
                    <label>&nbsp;</label>
                    <button class="form-control btn btn-primary" type="submit">Modificar Sesión</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}