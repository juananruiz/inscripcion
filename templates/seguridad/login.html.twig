{% extends 'usuario/layout_base.html.twig' %}
{% set titulo = 'Inicio de sesi√≥n' %}
{% block contenido %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="card mx-5">
        <form class="form" action="{{ path('login') }}" method="post">
            <div class="card-header"><h4>{{ titulo }}</h4></div>
            <div class="card-body">
                <input type="hidden" name="_target_path" value="{{ path('usuario_mi_cuenta') }}">
                <div class="form-group mx-2">
                    <label for="username">Correo</label>
                    <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" required>
                </div>
                <div class="form-group mx-2">
                    <label for="password">Clave</label>
                    <input class="form-control" type="password" id="password" name="_password" required>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-lg">Acceder</button>
            </div>
        </form>
    </div>
{% endblock %}